@inherits LayoutComponentBase
@inject TransformationsFactory Factory
@inject TransformationsState TransformationsState


<div class="container-fluid">
     
    <div class="row p-2">
        <div class="col-2">
            <div class="d-grid gap-1">
                <NavLink class="btn btn-outline-primary" 
                         href="/Transformations/Translation" 
                         ActiveClass="btn-primary text-white" 
                         Match="NavLinkMatch.Prefix"> Translation 
                </NavLink>

                <button class="btn btn-outline-danger"
                        onclick="@(new Action<object>(e => Reset()))">
                    Clear All
                </button>
            </div> 
            <br>
            <div class="d-grid gap-1">
                <TransformationsInfo></TransformationsInfo>
            </div>
        </div>
        <div class="col">
            @Body
            <br>
            <TransformationOutput></TransformationOutput>
        </div> 
        
        
    </div>
</div>

@code
{
    
    private void Reset()
    {
        Factory.Reset();
        Factory.ApplyAndSave();
        TransformationsState.NotifyStateChanged();
    }
}
