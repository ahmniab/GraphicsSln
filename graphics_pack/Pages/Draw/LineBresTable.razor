<table class="table table-sm table-striped table-bordered text-center"> 
    <thead>
    <tr>
        <th>k</th>
        <th>P<sub>k</sub>(4)</th>
        <th>(x<sub>k+1</sub>, y<sub>k+1</sub>)</th>
            
    </tr>
    </thead> 
    <tbody> 
     
    @foreach (LineBresPointInfo p in ShapePoints)
    {
        <tr>
            <td>@(k++)</td>
            <td>@p.Pk</td>
            <td>(@p.x, @p.y))</td>
        </tr>
    }

    </tbody> 
</table>

    
@code
{

    [Parameter] 
    public IEnumerable<LineBresPointInfo> ShapePoints { get; set; } = Enumerable.Empty<LineBresPointInfo>();
    private int k = 0;

}